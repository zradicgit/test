{% extends 'base.html.twig' %}

{% block body %}
    <legend>Product edit</legend>
    
    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(edit_form.name) }}
            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(edit_form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.price) }} (EUR)
            {{ form_widget(edit_form.price, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(edit_form.price) }}
        </div>
        
        <div class="form-group">
            {{ form_label(edit_form.discount) }} (%)
            {{ form_widget(edit_form.discount, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(edit_form.discount) }}
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-warning" />
    {{ form_end(delete_form) }}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
{% endblock %}
