{% extends 'base.html.twig' %}

{% block body %}
    <legend>Product creation</legend>
    
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.price) }} (EUR)
            {{ form_widget(form.price, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(form.price) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.discount) }} (%)
            {{ form_widget(form.discount, { 'attr': {'class': 'form-control form-control-inline'} }) }}
            {{ form_errors(form.discount) }}
        </div>

        <input type="submit" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
    
{% endblock %}
